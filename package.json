{
  "name": "husgit-cli",
  "version": "0.1.0",
  "description": "CLI tool for orchestrating GitLab merge request workflows",
  "type": "module",
  "bin": {
    "husgit": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["gitlab", "merge-request", "cli"],
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "@urql/core": "^5.1.1",
    "axios": "^1.7.9",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "graphql": "^16.10.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
